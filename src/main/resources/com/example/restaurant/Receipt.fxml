<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>

<VBox spacing="15.0" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.restaurant.ReceiptController" style="-fx-background-color: #f4f1f1; -fx-padding: 20px; -fx-border-radius: 10px; -fx-background-radius: 10px;">
    <Label style="-fx-font-size: 28px; -fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-text-fill: #6A4C4C;" text="Receipt" />

    <Label fx:id="receiptIdLabel" style="-fx-font-size: 20px; -fx-font-family: 'Arial'; -fx-text-fill: #8A4B3A;" />

    <TextArea fx:id="orderDetailsTextArea" prefHeight="300.0" prefWidth="300.0" editable="false" wrapText="true" style="-fx-background-color: #ffffff; -fx-border-color: #c2c2c2; -fx-border-radius: 8px; -fx-font-size: 16px; -fx-font-family: 'Verdana';" />

    <Label fx:id="totalCostLabel" style="-fx-font-size: 20px; -fx-font-family: 'Arial'; -fx-text-fill: #6A4C4C;" />

    <Button fx:id="closeButton" style="-fx-background-color: #d46b6b; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-padding: 10px 20px; -fx-border-radius: 8px;" text="Close" onAction="#closeReceipt" />
</VBox>